<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="common.head.components">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="*" xsi:type="array">
                        <item name="Magento_Ui/js/core/app" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="customer" xsi:type="array">
                                    <item name="component" xsi:type="string">Magento_Customer/js/view/customer</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="footer.column.account">
            <block name="footer-authorization-link" class="Magento\Customer\Block\Account\AuthorizationLink" />
        </referenceBlock>
    </body>
</page>
