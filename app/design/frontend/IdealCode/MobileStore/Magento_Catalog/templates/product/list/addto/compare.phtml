        <a href="#"
           title="<?= __('Add to Compare') ?>"
           data-bind="text: '<?= __('Add to Compare') ?>'"
           data-ajax='<?= $helper->getPostDataParams($product) ?>'>
            &nbsp;
        </a>
    <!-- /ko -->
    <!-- ko if: productInCompare('<?= $product->getId() ?>') -->
    <a href="#"
       title="<?= __('Remove from Compare') ?>"
