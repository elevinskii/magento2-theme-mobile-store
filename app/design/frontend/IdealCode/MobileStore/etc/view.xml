<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="mini_cart_product_thumbnail" type="thumbnail">
                <width>68</width>
                <height>68</height>
            </image>
            <image id="mini_cart_product_sidebar" type="thumbnail">
                <width>90</width>
                <height>90</height>
            </image>
            <image id="category_page_list_base" type="small_image">
                <width>190</width>
                <height>190</height>
            </image>
            <image id="category_page_list_second" type="image">
                <width>190</width>
                <height>190</height>
            </image>
            <image id="small_products_list_base" type="small_image">
                <width>150</width>
                <height>150</height>
            </image>
            <image id="small_products_list_second" type="image">
                <width>150</width>
                <height>150</height>
            </image>
            <image id="compare_sidebar_block" type="thumbnail">
                <width>60</width>
                <height>60</height>
            </image>
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>75</width>
                <height>75</height>
            </image>
            <image id="search_suggest_product_thumbnail" type="thumbnail">
                <width>40</width>
                <height>40</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>102</width>
                <height>102</height>
            </image>
            <image id="product_page_image_medium" type="image">
                <width>310</width>
                <height>310</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="allowfullscreen">false</var>
        </var>
    </vars>
</view>
